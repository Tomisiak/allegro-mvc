@model AllegroMVC.ViewModels.HomeViewModel
@using AllegroMVC.Infrastructure

<nav class="flower-types-horizontal">
    <ul>
        @foreach (var flowerType in Model.FlowerTypes)
        {
            <li>
                <a href="@Url.Action("List", "Store", new { flowerTypeName = flowerType.Name.ToLower() })" 
                   style="background-image: url(@Url.FlowerTypeIconPath(flowerType.IconFileName)); ">
                    @flowerType.Name
                </a>
            </li>
        }
    </ul>
</nav>

<section>
    <ul class="ThreeColumnsPhotosList large-flower-photo-list">
        @foreach (var newArrival in Model.NewArrivals)
        {
            <li>
                <article>
                    <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = newArrival.FlowerId })">
                        <img src="../Content/Images/cart.png" />
                    </a>
                    <a class="productdetailslink" href="@Url.Action("Details", "Store", new { id = newArrival.FlowerId })">
                        <div class="newFlag"></div>
                        <img class="flower-photo" src="@Url.FlowerPhotoPath(newArrival.ImageFileName)" />
                        <h1>
                            @newArrival.FlowerName
                        </h1>
                    </a>
                </article>
            </li>
        }
    </ul>
</section>

<section>
    <ul class="ThreeColumnsPhotosList large-flower-photo-list">
        @foreach (var bestseller in Model.Bestsellers)
        {
            <li>
                <article>
                    <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = bestseller.FlowerId })">
                        <img src="../Content/Images/cart.png" />
                    </a>
                    <a class="productdetailslink" href="@Url.Action("Details", "Store", new { id = bestseller.FlowerId })">
                        <div class="bestsellerFlag"></div>
                        <img class="flower-photo" src="@Url.FlowerPhotoPath(bestseller.ImageFileName)" />
                        <h1>
                            @bestseller.FlowerName
                        </h1>
                    </a>
                </article>
            </li>
        }
    </ul>
</section>

